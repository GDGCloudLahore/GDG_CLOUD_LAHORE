<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Static App Icon (No Animation) -->
    <ImageView
        android:id="@+id/animatedIcon"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/gdgcloudlahore"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:contentDescription="App Icon"/>

    <!-- User Icon -->
    <ImageView
        android:id="@+id/userIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_user"
        android:layout_below="@id/animatedIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:contentDescription="User Icon" />

    <!-- Card for Email Display -->
    <LinearLayout
        android:id="@+id/emailCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_signin"
        android:padding="10dp"
        android:layout_below="@id/userIcon"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Email"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Legal and Policies Button -->
    <LinearLayout
        android:id="@+id/legalPolicies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/white_bg"
        android:padding="16dp"
        android:elevation="10dp"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@id/emailCard"
        android:layout_marginTop="96dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_security" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Legal and Policies"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_caretright" />
    </LinearLayout>

    <!-- Help and Support Button -->
    <LinearLayout
        android:id="@+id/helpAndSupport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/white_bg"
        android:padding="16dp"
        android:elevation="10dp"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@id/legalPolicies"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_helpnsupp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Help and Support"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_caretright" />
    </LinearLayout>

    <!-- Join WhatsApp Community Button -->
    <LinearLayout
        android:id="@+id/whatsappButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/white_bg"
        android:padding="16dp"
        android:elevation="10dp"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@id/helpAndSupport"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_whatsapp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Join Our WhatsApp Community"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_caretright" />
    </LinearLayout>

    <!-- Logout Button at the Bottom -->

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@color/red"
        android:gravity="center"
        android:padding="12dp"
        android:elevation="10dp"
        android:text="Logout"
        android:textSize="16sp"
        android:textColor="@color/white" />


</RelativeLayout>
